 {
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "semi": "error",
        "no-console": "error",
         "prettier/prettier": [
             "error",
             {
                 "printWidth": 80,
                 "jsxSingleQuote": true,
                 "singleQuote": true,
                 "tabWidth": 2,
                 "no-unused-vars": "warn"
             }
         ]
     }
}
